<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/hole"
        android:layout_below="@id/profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#68a0b0"
        android:orientation="vertical" />


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/camera"


        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivHousehold"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="55dp"
        android:src="@drawable/ic_baseline_home_24"


        />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nominee Info"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/ivHousehold"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textSize="16sp"/>





    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="2.5"
            android:padding="4dp"
            android:text="File No"
            android:textColor="@android:color/white"
            android:textSize="16sp">

        </TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_weight="2.5"
            android:padding="4dp"
            android:text=": 2266"
            android:textColor="@android:color/white"
            android:textSize="16sp">

        </TextView>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/line2"
        android:layout_below="@id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="2.5"
            android:padding="4dp"
            android:text="Applicant Name"
            android:textColor="@android:color/white"
            android:textSize="16sp">

        </TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_weight="2.5"
            android:padding="4dp"
            android:text=": M.A Khan"
            android:textColor="@android:color/white"
            android:textSize="16sp">

        </TextView>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/line3"
        android:layout_below="@id/line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="2.5"
            android:padding="4dp"
            android:text="Nominee Name"
            android:textColor="@android:color/white"
            android:textSize="16sp">

        </TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_weight="2.5"
            android:padding="4dp"
            android:text=": ABC Khane"
            android:textColor="@android:color/white"
            android:textSize="16sp">

        </TextView>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/line4"
        android:layout_below="@id/line3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="2.5"
            android:padding="4dp"
            android:text="Relation with Nominee"
            android:textColor="@android:color/white"
            android:textSize="16sp">

        </TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_weight="2.5"
            android:padding="4dp"
            android:text=": Husband"
            android:textColor="@android:color/white"
            android:textSize="16sp">

        </TextView>


    </androidx.appcompat.widget.LinearLayoutCompat>


</RelativeLayout>

















